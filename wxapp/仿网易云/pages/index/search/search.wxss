.search-item {
    display: flex;
}

.search {
    margin: 0 20rpx;
}

.left-icon {
    margin: 20rpx 20rpx 20rpx 0;
    color: #000;
    position: relative;
    top: 6rpx;
}

.item-name {
    font-size: 32rpx;
    margin: auto 0;
    color: #58DDB4;
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 65vw;
}

.artist-name {
    font-size: 32rpx;
    margin: auto 0;
    color: #58DDB4;
    padding-right: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.name {
    display: flex;
}

.search-wrapper .title {
    font-size: 40rpx;
    font-weight: bold;
    color: #8AE5C7;
}

.search-wrapper {
    border-color: rgb(250, 250, 250);
    width: 100vw;
    margin-right: 40rpx;
    height: 440rpx;
}

.history-title .text,
.hotsearch .text {
    margin: 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-weight: bold;
}

.history-title {
    display: flex;
    justify-content: space-between;
}

.delete {
    width: 100rpx;
    height: 100rpx;
}

.delete image {
    width: 40rpx;
    height: 40rpx;
    margin-top: 30rpx;
    margin-left: 20rpx;
}

.history-scroll {
    position: absolute;
    top: 670rpx;
    bottom: 100rpx;
    left: 0;
    right: 0;
}

.hotsearch-item,
.history-item {
    display: inline-block;
    background-color: #fff;
    font-size: 24rpx;
    border-radius: 40rpx;
    margin: 14rpx 20rpx;
    height: 40rpx;
    line-height: 40rpx;
    border: 1px solid #6e6e6e;
    padding: 10rpx;
}

.hotsearch-item :nth-child(5) {
    color: #58DDB4;
}

.loading {
    width: 60rpx;
    margin: 0 auto;
}