.search-item {
    display: flex;
}

.search {
    margin: 0 20rpx;
}

.left-icon {
    margin: 20rpx 20rpx 20rpx 0;
    color: #000;
    position: relative;
    top: 6rpx;
}

.item-name {
    font-size: 32rpx;
    margin: auto 0;
    color: #58DDB4;
}

.search-wrapper .title {
    font-size: 40rpx;
    font-weight: bold;
    color: #8AE5C7;
}

.search-wrapper {
    border-color: rgb(250, 250, 250);
}
.history-title .text,.hotsearch .text{
    margin: 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-weight: bold;
}
.hotsearch-item,.history-item{
    display: inline-block;
    background-color: #fff;
    font-size: 24rpx;
    border-radius: 40rpx;
    margin: 14rpx 20rpx;
    height: 40rpx;
    line-height: 40rpx;
    border: 1px solid #6e6e6e;
    padding: 10rpx;
}
.hotsearch-item :nth-child(5){
    color: #58DDB4;
}