<!--pages/category/category.wxml-->
<view class="main">
  <view class="category-left">
    <view 
    wx:for="{{category}}" 
    wx:key="{{item.id}}" 
    data-id="{{item.id}}"
    data-index="{{index}}"
    class="cate-list {{curIndex === index ? 'on' : ''}}"
    bindtap="switchTab"
    >
      {{item.name}}
    </view>
  </view>
  <scroll-view class="category-right"  scroll-y="true" upper-threshold="50" lower-threshold="50" 
    scroll-top="0" scroll-left="0" scroll-into-view="{{toView}}" scroll-with-animation="true" enable-back-to-top="false" 
    bindscrolltoupper="" bindscrolltolower="" bindscroll="">
    
  </scroll-view>
    
</view>

