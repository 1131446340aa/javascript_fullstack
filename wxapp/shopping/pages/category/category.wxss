/* pages/category/category.wxss */
.main{
    height: 100%;
  }
  .category-left{
    float: left;
    width: 150rpx;
    height: 100%;
    border-right: 1px solid #ddd;
    box-sizing: border-box;
  }
  .cate-list{
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-left: 3px solid #ffffff;
  }
  .cate-list.on{
    color: #ab956d;
    border-color: #ab956d;
  }
  .category-right{
    float: right;
    width: 600rpx;
    height: 100%;
    overflow: hidden;
  }
  .cate-box{
    height: 100%;
    padding: 40rpx;
    box-sizing: border-box;
  }
  .cate-banner image{
    display: block;
    width: 100%;
    height: 190rpx;
  }
  .cate-title{
    position: relative;
    height: 30rpx;
    line-height: 30rpx;
    padding: 30rpx 0 55rpx;
    text-align: center;
    color: #ab956d;
    font-size: 28rpx;
  }
  .product-list{
    display: inline-block;
    width: 160rpx;
    height: 160rpx;
    text-align: center;
    margin: 0 20rpx 20rpx 0;
    font-size: 24rpx;
  }
  .product-list image{
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 20rpx;
  }
  .product-list:nth-child(3n){
    margin-right: 0;
  }
  